{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-extension-aws-vault",
  "title": "raycast-extension-aws-vault",
  "description": "Extension for Raycast which opens the AWS management console via aws-vault.",
  "icon": "command-icon.png",
  "author": "sawadashota",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "aws-vault",
      "description": "Opens the AWS management console via aws-vault",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "title": "Browser",
      "data": [
        {
          "title": "Google Chrome",
          "value": "Google Chrome"
        },
        {
          "title": "firefox",
          "value": "firefox"
        },
        {
          "title": "Brave Browser",
          "value": "Brave Browser"
        }
      ],
      "default": "Google Chrome",
      "name": "browserName",
      "description": "Which browser to use.",
      "type": "dropdown",
      "required": true
    },
    {
      "title": "aws-vault entrypoint",
      "default": "aws-vault",
      "name": "entrypoint",
      "description": "Entrypoint of aws-vault command. If default doesn't work, please set path to aws-vault.",
      "type": "textfield",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.27.1"
  },
  "devDependencies": {
    "@types/node": "~17.0.14",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.23.0",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  },
  "version": "0.1.0"
}
